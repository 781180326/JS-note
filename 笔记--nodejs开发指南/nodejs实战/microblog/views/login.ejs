
<% include header %>

<form method="post">
  <div class="form-group">
    <label for="username">用户名</label>
    <input type="text" class="form-control" name="username" id="username" aria-describedby="userHelp" placeholder="username">
    <small id="userHelp" class="form-text text-muted">你的账户名称，用于登录和显示。</small>
  </div>
  <div class="form-group">
    <label for="password">密码</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="password">
  </div>
  <button type="submit" class="btn btn-primary">登录</button>
</form>

<% include footer %>
